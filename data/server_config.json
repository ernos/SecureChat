{
    "server": {
        "host": "0.0.0.0",
        "port": 8100,
        "ssl_enabled": true,
        "ssl_cert_path": "server/keys/certificate.crt",
        "ssl_key_path": "server/keys/keyfile2.key",
        "max_connections": 100,
        "ping_interval": 30,
        "ping_timeout": 40
    },
    "security": {
        "rsa_key_size": 2048,
        "max_message_length": 4096,
        "session_timeout": 3600,
        "rate_limit_messages": 60,
        "rate_limit_window": 60
    },
    "features": {
        "public_chat": true,
        "private_messaging": true,
        "end_to_end_encryption": true,
        "digital_signatures": true,
        "file_sharing": true,
        "message_history": true
    },
    "logging": {
        "level": "INFO",
        "file": "chat_server.log",
        "max_file_size": 10485760,
        "backup_count": 5
    }
}